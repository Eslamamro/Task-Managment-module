<odoo>
  <data>


    <!-- INCOME -->
        <!-- Form -->
        <record id="view_income_form" model="ir.ui.view">
            <field name="name">client.income.form</field>
            <field name="model">income</field>
            <field name="arch" type="xml">
            <form string="Income">
                <sheet>
                    <group>
                        <field name="client_id"/>
                        <field name="date" string="Date"/>
                        <field name="summary" string="Summary"  widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </group>
                    <group>
                        <field name="note" string="Notes"/>
                    </group>
                    
                </sheet>
            </form>
            </field>
        </record>

        <!-- List -->
        <record id="view_income_list" model="ir.ui.view">
            <field name="name">client.income.list</field>
            <field name="model">income</field>
            <field name="arch" type="xml">
            <list string="Income">
                <field name="client_id"/>
                <field name="date" string="Date"/>
                <field name="summary" string="Summary"  widget="many2many_tags" options="{'color_field': 'color'}"/>
                <button name="action_done_activity" type="object" string="Done" class="btn btn-link" icon="fa-check"/>
                <button name="action_cancel_activity" type="object" string="Cancel" 
                        class="btn btn-link text-danger"
                        icon="fa-times"/>
            </list>
            </field>
        </record>


