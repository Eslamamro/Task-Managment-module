<odoo>
  <data>


    <!-- explicit Form view definition -->
        <record id="view_income_form" model="ir.ui.view">
            <field name="name">client.income.form</field>
            <field name="model">income</field>
            <field name="arch" type="xml">
            <form string="Income">
                <sheet>
                    <group>
                        <field name="client_id"/>
                        <field name="date" string="Date"/>
                        <field name="summary" string="Summary"  widget="many2many_tags" options="{'color_field': 'color'}"/>
                    </group>
                    <group>
                        <field name="note" string="Notes"/>
                    </group>
                    
                </sheet>
            </form>
            </field>
        </record>

        <record id="view_income_list" model="ir.ui.view">
            <field name="name">client.income.list</field>
            <field name="model">income</field>
            <field name="arch" type="xml">
